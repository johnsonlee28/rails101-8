<%= f.nested_fields_for :tickets do |ff| %>
  <fieldset style="border-left:5px solid #bbb; margin-bottom: 10px; padding:10px;">
    <legend>售票影院</legend>
    <div class="form-group">
      <%= ff.label :影院名称 %>
      <%= ff.text_field :cinema_name, :class => "form-control"%>
    </div>

    <div class="form-group">
      <%= ff.label :预售数量 %>
      <%= ff.number_field :quantity, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :影院地址 %>
      <%= ff.text_field :location, :class => "form-control"%>
    </div>

  </fieldset>
  <%= ff.remove_nested_fields_link "移除这个影院", :class => "btn btn-danger"%>
<% end %>
<p class="text-right">
  <%= f.add_nested_fields_link :tickets, "新增影院", :class => "btn btn-default"%>
</p>
